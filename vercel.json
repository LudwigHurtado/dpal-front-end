{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://dpal-ai-server-production.up.railway.app/api/:path*"
    },
    {
      "source": "/((?!.*\\..*).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [{ "key": "X-Content-Type-Options", "value": "nosniff" }]
    }
  ]
}
